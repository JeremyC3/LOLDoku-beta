{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"strict": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		// Remove "noEmit": true to allow the compiler to output files
		"declaration": true // Optional: Generates corresponding '.d.ts' file.
	},
	"include": ["src/**/*", "prisma"],
	"exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
